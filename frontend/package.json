    "@angular/platform-browser": "^20.3.2",
    "@angular/router": "^20.3.2",
    "@ng-matero/extensions": "^20.3.1",
    "@ng-matero/extensions-date-fns-adapter": "^20.0.0",
    "@ngneat/overview": "6.1.1",
